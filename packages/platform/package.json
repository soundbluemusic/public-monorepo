{
  "name": "@soundblue/platform",
  "version": "1.0.0",
  "type": "module",
  "sideEffects": false,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/soundbluemusic/public-monorepo",
    "directory": "packages/platform"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": ["src"],
  "exports": {
    ".": "./src/index.ts",
    "./storage": {
      "browser": "./src/storage/index.browser.ts",
      "default": "./src/storage/index.noop.ts"
    },
    "./sqlite": {
      "browser": "./src/sqlite/index.browser.ts",
      "default": "./src/sqlite/index.noop.ts"
    },
    "./sqlite/types": "./src/sqlite/types.ts",
    "./db": "./src/db/index.ts"
  },
  "typesVersions": {
    "*": {
      "sqlite": ["./src/sqlite/index.browser.ts"],
      "sqlite/types": ["./src/sqlite/types.ts"],
      "storage": ["./src/storage/types.ts"],
      "db": ["./src/db/index.ts"]
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@soundblue/core": "workspace:*",
    "dexie": "^4.0.10"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
