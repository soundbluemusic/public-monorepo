---
import { Card, CardGrid } from '@astrojs/starlight/components';
import metadata from '../data/metadata.json';

interface Props {
  locale?: 'en' | 'ko' | 'ja';
}

const { locale = 'en' } = Astro.props;
const { apps, i18n } = metadata;
const details = i18n.appDetails;
---

<CardGrid>
  <Card title={`ðŸ“– ${apps.context.name}`} icon={apps.context.icon}>
    <strong>{apps.context.subtitle[locale]}</strong>
    <p>{details.context.description[locale]}</p>
    <ul>
      {details.context.features[locale].map((feature: string) => (
        <li>{feature}</li>
      ))}
    </ul>
    <p><a href={apps.context.url}>{details.context.visitLabel[locale]}</a></p>
  </Card>

  <Card title={`ðŸ”§ ${apps.permissive.name}`} icon={apps.permissive.icon}>
    <strong>{apps.permissive.subtitle[locale]}</strong>
    <p>{details.permissive.description[locale]}</p>
    <ul>
      {details.permissive.features[locale].map((feature: string) => (
        <li>{feature}</li>
      ))}
    </ul>
    <p><a href={apps.permissive.url}>{details.permissive.visitLabel[locale]}</a></p>
  </Card>

  <Card title={`ðŸ“ ${apps.roots.name}`} icon={apps.roots.icon}>
    <strong>{apps.roots.subtitle[locale]}</strong>
    <p>{details.roots.description[locale]}</p>
    <ul>
      {details.roots.features[locale].map((feature: string) => (
        <li>{feature}</li>
      ))}
    </ul>
    <p><a href={apps.roots.url}>{details.roots.visitLabel[locale]}</a></p>
  </Card>
</CardGrid>
