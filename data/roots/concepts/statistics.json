      ],
      "nextTopics": [
        "logistic-regression",
        "anova"
      ],
      "related": [
        "least-squares"
      ],
      "applications": [
        "prediction",
        "inference"
      ]
    },
    "tags": [
      "회귀",
      "regression",
      "prediction",
      "modeling"
    ]
