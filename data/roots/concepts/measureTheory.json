        "formulas": [
          "P(Ω) = 1",
          "P(A) ≥ 0",
          "P(∪A_n) = ΣP(A_n) (disjoint)"
        ],
        "examples": [
          "Coin flip",
          "Normal distribution",
          "Uniform distribution"
        ],
        "applications": [
