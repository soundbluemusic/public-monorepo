{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./app/*"],
      "~/*": ["./app/*"]
    },
    "baseUrl": "."
  },
  "include": ["app/**/*", "scripts/**/*", "vite.config.ts", "react-router.config.ts"],
  "exclude": ["node_modules"]
}
