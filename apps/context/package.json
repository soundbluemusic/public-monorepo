{
  "name": "context",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev": "react-router dev",
    "prebuild": "npx @inlang/paraglide-js compile --project ./project.inlang --outdir ./app/paraglide && tsx scripts/load-entries.ts",
    "build": "react-router build && tsx scripts/generate-sitemaps.ts",
    "start": "react-router-serve ./build/server/index.js",
    "sitemap": "tsx scripts/generate-sitemaps.ts",
    "load-entries": "tsx scripts/load-entries.ts",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-toggle": "^1.1.0",
    "@soundblue/shared-react": "workspace:*",
    "dexie": "^4.0.10",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.11.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@react-router/dev": "^7.11.0",
    "@react-router/serve": "^7.11.0",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "tailwindcss": "^4.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.0",
    "vite-plugin-pwa": "^0.21.2",
    "workbox-window": "^7.3.0"
