{
  "name": "context",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev": "react-router dev",
    "prebuild": "tsx scripts/generate-paraglide-messages.ts && tsx scripts/load-entries.ts && tsx scripts/generate-homonyms.ts && tsx scripts/compress-entries.ts && tsx scripts/generate-search-index.ts && tsx scripts/export-data.ts",
    "export:data": "tsx scripts/export-data.ts",
    "build": "BUILD_TARGET=pages NODE_OPTIONS='--max-old-space-size=8192' react-router build && tsx scripts/generate-sitemaps.ts",
    "build:r2": "BUILD_TARGET=r2 NODE_OPTIONS='--max-old-space-size=8192' react-router build",
    "build:all": "BUILD_TARGET=all NODE_OPTIONS='--max-old-space-size=8192' react-router build && tsx scripts/generate-sitemaps.ts",
    "upload:r2:entries": "tsx scripts/upload-to-r2.ts entries",
    "upload:r2:data": "tsx scripts/upload-to-r2.ts data",
    "deploy:r2": "pnpm build:r2 && pnpm upload:r2:entries",
    "preview": "npx serve build/client -l 3003 --no-port-switching",
    "start": "npx serve build/client -l 3003 --no-port-switching",
    "sitemap": "tsx scripts/generate-sitemaps.ts",
    "load-entries": "tsx scripts/load-entries.ts",
    "compress-entries": "tsx scripts/compress-entries.ts",
    "verify-compression": "tsx scripts/verify-compression.ts",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@soundblue/config": "workspace:*",
    "@soundblue/core": "workspace:*",
    "@soundblue/features": "workspace:*",
    "@soundblue/i18n": "workspace:*",
    "@soundblue/pwa": "workspace:*",
    "@soundblue/search": "workspace:*",
    "@soundblue/seo": "workspace:*",
    "@soundblue/ui": "workspace:*",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router": "^7.12.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260109.0",
    "@react-router/dev": "^7.12.0",
    "@react-router/node": "^7.12.0",
    "@react-router/serve": "^7.12.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.0.3",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "clsx": "^2.1.1",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "workbox-window": "^7.3.0",
    "wrangler": "^4.58.0"
  },
  "engines": {
    "node": ">=20"
  }
}