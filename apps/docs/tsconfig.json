{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@/content/*": ["./content/*"]
    },
    "types": ["vite/client", "@types/mdx"]
  },
  "include": ["app/**/*", "content/**/*", "vite.config.ts", "react-router.config.ts", "**/*.mdx"],
  "exclude": ["node_modules", "build"]
}
