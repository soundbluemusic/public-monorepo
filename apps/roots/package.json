{
  "name": "roots",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "prebuild": "mkdir -p dist/server && echo 'export default {}' > dist/server/index.js && pnpm exec paraglide-js compile --project ./project.inlang --outdir ./app/paraglide && tsx scripts/generate-search-index.ts",
    "build": "NODE_OPTIONS='--max-old-space-size=8192' vite build && tsx scripts/generate-sitemaps.ts",
    "postbuild": "node scripts/inject-polyfill.mjs",
    "deploy": "pnpm build && wrangler deploy",
    "preview": "vite preview",
    "start": "vite preview",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@soundblue/config": "workspace:*",
    "@soundblue/core": "workspace:*",
    "@soundblue/features": "workspace:*",
    "@soundblue/i18n": "workspace:*",
    "@soundblue/pwa": "workspace:*",
    "@soundblue/search": "workspace:*",
    "@soundblue/seo": "workspace:*",
    "@soundblue/ui": "workspace:*",
    "@tanstack/react-router": "^1.120.6",
    "@tanstack/react-start": "^1.154.7",
    "dexie": "^4.0.10",
    "lucide-react": "^0.562.0",
    "minisearch": "^7.2.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.21.1",
    "@cloudflare/workers-types": "^4.20260109.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/d3": "^7.4.3",
    "@types/node": "^25.0.3",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "clsx": "^2.1.1",
    "d3": "^7.9.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "workbox-window": "^7.3.0",
    "wrangler": "^4.58.0"
  },
  "engines": {
    "node": ">=20"
  }
}
