{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error"
      },
      "style": {
        "useImportType": "error"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noArrayIndexKey": "warn"
      },
      "complexity": {
        "noImportantStyles": "off"
      },
      "a11y": {
        "useSemanticElements": "warn",
        "useAriaPropsSupportedByRole": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    },
    "linter": {
      "enabled": false
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/.react-router",
      "!**/.vinxi",
      "!**/.output",
      "!**/dist",
      "!**/build",
      "!**/*.min.js",
      "!**/apps/context/app/data/generated",
      "!**/apps/roots/public/*.json",
      "!**/apps/*/app/paraglide",
      "!**/apps/*/.inlang-plugins",
      "!**/apps/roots/app/routes/+types",
      "!**/packages/shared/src/styles/tailwind.css"
    ]
  }
}
