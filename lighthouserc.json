{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "startServerCommand": "pnpm preview",
      "startServerReadyPattern": "Local:",
      "startServerReadyTimeout": 30000,
      "url": [
        "http://localhost:3005/",
        "http://localhost:3005/ko",
        "http://localhost:3005/about",
        "http://localhost:3005/ko/about",
        "http://localhost:3005/browse",
        "http://localhost:3005/ko/browse",
        "http://localhost:3005/search",
        "http://localhost:3005/ko/search"
      ],
      "settings": {
        "preset": "desktop",
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1
        }
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.98 }],
        "categories:accessibility": ["error", { "minScore": 0.98 }],
        "categories:best-practices": ["error", { "minScore": 0.98 }],
        "categories:seo": ["error", { "minScore": 0.98 }],
        "categories:pwa": ["warn", { "minScore": 0.9 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
