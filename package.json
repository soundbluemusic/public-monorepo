{
  "name": "soundblue-monorepo",
  "private": true,
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev:context": "pnpm --filter context dev",
    "dev:permissive": "pnpm --filter permissive dev",
    "dev:roots": "pnpm --filter roots dev",
    "build": "pnpm --filter './apps/*' build",
    "build:context": "pnpm --filter context build",
    "build:permissive": "pnpm --filter permissive build",
    "build:roots": "pnpm --filter roots build",
    "build:test": "pnpm typecheck && pnpm build && pnpm verify:ssg",
    "verify:ssg": "tsx scripts/verify-ssg.ts",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "typecheck": "pnpm --filter './apps/*' --filter './packages/*' typecheck",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "check:circular": "skott --displayMode=raw --showCircularDependencies --fileExtensions=.ts,.tsx --ignorePattern='**/.vinxi/**' --ignorePattern='**/.output/**' --ignorePattern='**/node_modules/**' --cwd=apps && skott --displayMode=raw --showCircularDependencies --fileExtensions=.ts,.tsx --ignorePattern='**/.vinxi/**' --ignorePattern='**/.output/**' --ignorePattern='**/node_modules/**' --cwd=packages",
    "check:versions": "syncpack list-mismatches",
    "check:size": "size-limit",
    "check:links": "blc http://localhost:3000 --recursive --exclude-external",
    "lhci": "lhci autorun",
    "add-data": "tsx scripts/add-data.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@biomejs/biome": "^1.9.0",
    "@lhci/cli": "^0.14.0",
    "@playwright/test": "^1.49.0",
    "@resvg/resvg-js": "^2.6.2",
    "@size-limit/preset-app": "^11.1.6",
    "@vitest/coverage-v8": "^2.1.8",
    "broken-link-checker": "^0.7.8",
    "husky": "^9.1.7",
    "skott": "^0.35.6",
    "pixelmatch": "^6.0.0",
    "sharp": "^0.34.5",
    "size-limit": "^11.1.6",
    "syncpack": "^13.0.0",
    "tsx": "^4.19.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.0.0"
}
