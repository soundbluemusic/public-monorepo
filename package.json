{
  "name": "soundblue-monorepo",
  "private": true,
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev:context": "pnpm --filter context dev",
    "dev:permissive": "pnpm --filter permissive dev",
    "dev:roots": "pnpm --filter roots dev",
    "build": "pnpm --filter './apps/*' build",
    "build:context": "pnpm --filter context build",
    "build:permissive": "pnpm --filter permissive build",
    "build:roots": "pnpm --filter roots build",
    "build:test": "pnpm typecheck && pnpm build && pnpm verify:ssg",
    "verify:ssg": "tsx scripts/verify-ssg.ts",
    "preview": "pnpm --filter roots preview",
    "preview:context": "pnpm --filter context preview",
    "preview:permissive": "pnpm --filter permissive preview",
    "preview:roots": "pnpm --filter roots preview",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "typecheck": "pnpm --filter './apps/*' --filter './packages/*' typecheck",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "check:circular": "skott --displayMode=raw --showCircularDependencies --fileExtensions=.ts,.tsx --ignorePattern='**/build/**' --ignorePattern='**/node_modules/**' --cwd=apps && skott --displayMode=raw --showCircularDependencies --fileExtensions=.ts,.tsx --ignorePattern='**/build/**' --ignorePattern='**/node_modules/**' --cwd=packages",
    "check:versions": "syncpack list-mismatches",
    "check:size": "size-limit",
    "check:links": "tsx scripts/check-links.ts",
    "lhci": "lhci autorun",
    "lhci:context": "APP=context lhci autorun",
    "lhci:permissive": "APP=permissive lhci autorun",
    "lhci:roots": "APP=roots lhci autorun",
    "lhci:all": "pnpm lhci:context && pnpm lhci:permissive && pnpm lhci:roots",
    "add-data": "tsx scripts/add-data.ts",
    "prepare": "husky",
    "postinstall": "pnpm run prebuild:all",
    "prebuild:all": "pnpm --filter './apps/*' prebuild"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@biomejs/biome": "^1.9.0",
    "@inlang/paraglide-js": "^2.7.0",
    "@inlang/paraglide-vite": "^1.4.0",
    "@inlang/plugin-message-format": "^4.0.0",
    "@lhci/cli": "^0.14.0",
    "@playwright/test": "^1.49.0",
    "@resvg/resvg-js": "^2.6.2",
    "@size-limit/preset-app": "^11.1.6",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@types/jsdom": "^27.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "broken-link-checker": "^0.7.8",
    "dexie": "^4.0.10",
    "fake-indexeddb": "^6.2.5",
    "glob": "^13.0.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lighthouse": "^13.0.1",
    "pixelmatch": "^6.0.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.34.5",
    "size-limit": "^11.1.6",
    "skott": "^0.35.6",
    "syncpack": "^13.0.0",
    "tsx": "^4.19.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.0.0"
}
