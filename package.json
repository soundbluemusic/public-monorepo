{
  "name": "public-monorepo",
  "private": true,
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "dev:context": "pnpm --filter context dev",
    "dev:permissive": "pnpm --filter permissive dev",
    "dev:roots": "pnpm --filter roots dev",
    "build": "pnpm --filter './apps/*' build",
    "build:context": "pnpm --filter context build",
    "build:permissive": "pnpm --filter permissive build",
    "build:roots": "pnpm --filter roots build",
    "build:test": "pnpm typecheck && pnpm build && pnpm verify:ssg",
    "verify:ssg": "tsx scripts/verify-ssg.ts",
    "preview": "pnpm --filter roots preview",
    "preview:context": "pnpm --filter context preview",
    "preview:permissive": "pnpm --filter permissive preview",
    "preview:roots": "pnpm --filter roots preview",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "typecheck": "pnpm --filter './apps/*' --filter './packages/*' typecheck",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "check:circular": "skott --displayMode=raw --showCircularDependencies --fileExtensions=.ts,.tsx --ignorePattern='**/build/**' --ignorePattern='**/node_modules/**' --cwd=apps && skott --displayMode=raw --showCircularDependencies --fileExtensions=.ts,.tsx --ignorePattern='**/build/**' --ignorePattern='**/node_modules/**' --cwd=packages",
    "check:versions": "syncpack list-mismatches",
    "check:size": "size-limit",
    "check:links": "tsx scripts/check-links.ts",
    "lhci": "lhci autorun",
    "lhci:context": "APP=context lhci autorun",
    "lhci:permissive": "APP=permissive lhci autorun",
    "lhci:roots": "APP=roots lhci autorun",
    "lhci:all": "pnpm lhci:context && pnpm lhci:permissive && pnpm lhci:roots",
    "add-data": "tsx scripts/add-data.ts",
    "prepare": "husky",
    "postinstall": "pnpm --filter './apps/*' prebuild",
    "prebuild:all": "pnpm --filter './apps/*' prebuild",
    "storybook": "pnpm --filter @soundblue/ui storybook",
    "build-storybook": "pnpm --filter @soundblue/ui build-storybook"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@biomejs/biome": "^2.0.0",
    "@formkit/auto-animate": "^0.9.0",
    "@hookform/resolvers": "^5.2.2",
    "@inlang/paraglide-js": "^2.7.1",
    "@inlang/plugin-message-format": "^4.0.0",
    "@lhci/cli": "^0.14.0",
    "@playwright/test": "^1.49.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@resvg/resvg-js": "^2.6.2",
    "@size-limit/file": "^12.0.0",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-virtual": "^3.13.13",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/d3": "^7.4.3",
    "@types/jest-axe": "^3.5.9",
    "@types/jsdom": "^27.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "axe-core": "^4.11.0",
    "class-variance-authority": "^0.7.1",
    "d3": "^7.9.0",
    "dexie": "^4.0.10",
    "fake-indexeddb": "^6.2.5",
    "framer-motion": "^12.23.26",
    "glob": "^13.0.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "immer": "^11.1.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.3.0",
    "lighthouse": "^13.0.1",
    "linkinator": "^7.5.3",
    "nanoid": "^5.1.6",
    "pixelmatch": "^6.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.69.0",
    "react-router": "^7.11.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "sharp": "^0.34.5",
    "size-limit": "^12.0.0",
    "skott": "^0.35.6",
    "syncpack": "^13.0.0",
    "tailwind-merge": "^3.4.0",
    "tsx": "^4.19.2",
    "turbo": "^2.3.0",
    "vitest": "^2.1.8",
    "zod": "^4.2.1"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.11.0"
}
